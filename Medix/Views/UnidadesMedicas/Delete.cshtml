@model Medix.Models.UnidadeMedica

@{
    ViewData["Title"] = "Excluir: " + Model.Nome;
    ViewData["HideFooter"] = true; // Esconde o rodapé principal
}

<div class="card">
    <div class="card-header">
        <h1>Confirmar Exclusão</h1>
    </div>

    <div class="card-body">
        <h4 class="text-danger">Você tem certeza que deseja excluir esta unidade?</h4>
        <p>Esta ação não pode ser desfeita.</p>
        <hr />
        <dl class="details-list">
            <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>
            <dt>@Html.DisplayNameFor(model => model.CNPJ)</dt>
            <dd>@Html.DisplayFor(model => model.CNPJ)</dd>
        </dl>
    </div>

    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>