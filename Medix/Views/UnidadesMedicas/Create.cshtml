@model Medix.Models.UnidadeMedica

@{
    ViewData["Title"] = "Cadastrar Nova Unidade";
    ViewData["HideFooter"] = true;
}

<div class="auth-container">

    <div class="auth-header">
        <h1 class="auth-title">@ViewData["Title"]</h1>
        <p class="auth-subtitle">Preencha os dados da unidade abaixo.</p>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome">Nome da Unidade</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: Hospital Central" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CNPJ">CNPJ</label>
            <input asp-for="CNPJ" class="form-control" placeholder="00.000.000/0001-00" />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Endereco">Endereço</label>
            <input asp-for="Endereco" class="form-control" placeholder="Ex: Rua das Flores, 123" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefone">Telefone</label>
            <input asp-for="Telefone" class="form-control" placeholder="(XX) XXXX-XXXX" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmailAdmin">E-mail do Administrador</label>
            <input asp-for="EmailAdmin" class="form-control" placeholder="admin@unidade.com" />
            <span asp-validation-for="EmailAdmin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusUnidade>()">
                <option selected="selected" value="">Selecione um status</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-primary">Salvar Unidade</button>
    </form>

    <div class="auth-footer">
        <a asp-action="Index" class="auth-link">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://unpkg.com/imask"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cnpjInput = document.querySelector('input[name="CNPJ"]');
            if(cnpjInput) IMask(cnpjInput, { mask: '00.000.000/0000-00' });

            var telInput = document.querySelector('input[name="Telefone"]');
            if(telInput) IMask(telInput, { mask: '(00) 0000-0000' });
        });
    </script>
}