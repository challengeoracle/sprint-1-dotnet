@model IEnumerable<Medix.Models.UnidadeMedica>

@{
    ViewData["Title"] = "Unidades Médicas";
    ViewData["HideFooter"] = true;
}

<div class="card">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            Adicionar Nova
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Data de Cadastro</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.CNPJ)</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        StatusUnidade.Ativa => "status-ativa",
                                        StatusUnidade.Inativa => "status-inativa",
                                        StatusUnidade.Suspensa => "status-suspensa",
                                        StatusUnidade.EmTeste => "status-emteste",
                                        _ => ""
                                    };
                                }
                                <span class="badge @statusClass">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td>
                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-link">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-link text-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>