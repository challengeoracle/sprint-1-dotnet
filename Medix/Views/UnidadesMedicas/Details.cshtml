@model Medix.Models.UnidadeMedica

@{
    ViewData["Title"] = "Detalhes: " + Model.Nome;
    ViewData["HideFooter"] = true; // Esconde o rodapé principal
}

<div class="card">
    <div class="card-header">
        <h1>@Model.Nome</h1>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    </div>

    <div class="card-body">
        <dl class="details-list">
            <dt>@Html.DisplayNameFor(model => model.CNPJ)</dt>
            <dd>@Html.DisplayFor(model => model.CNPJ)</dd>

            <dt>@Html.DisplayNameFor(model => model.Status)</dt>
            <dd>
                @{
                    var statusClass = Model.Status switch
                    {
                        StatusUnidade.Ativa => "status-ativa",
                        StatusUnidade.Inativa => "status-inativa",
                        StatusUnidade.Suspensa => "status-suspensa",
                        _ => "status-emteste"
                    };
                }
                <span class="badge @statusClass">@Html.DisplayFor(model => model.Status)</span>
            </dd>

            <dt>@Html.DisplayNameFor(model => model.Endereco)</dt>
            <dd>@Html.DisplayFor(model => model.Endereco)</dd>

            <dt>@Html.DisplayNameFor(model => model.Telefone)</dt>
            <dd>@Html.DisplayFor(model => model.Telefone)</dd>

            <dt>@Html.DisplayNameFor(model => model.EmailAdmin)</dt>
            <dd>@Html.DisplayFor(model => model.EmailAdmin)</dd>

            <dt>Data de Cadastro</dt>
            <dd>@Model.DataCadastro.ToString("dd/MM/yyyy 'às' HH:mm")</dd>
        </dl>
    </div>

    <div class="card-footer">
        <a asp-action="Index" class="action-link">Voltar para a Lista</a>
    </div>
</div>