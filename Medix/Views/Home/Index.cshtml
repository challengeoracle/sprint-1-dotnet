@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Página Inicial";
}

@if (SignInManager.IsSignedIn(User))
{
    // --- ÁREA PARA QUANDO O USUÁRIO ESTIVER LOGADO (FUTURO DASHBOARD) ---
    <div class="page-header">
        <h1>Meu Dashboard</h1>
    </div>
    <p>Olá, @User.Identity.Name! Bem-vindo de volta.</p>
    <p><em>(Em breve, aqui teremos cards com o total de unidades cadastradas, atalhos e outras informações úteis.)</em></p>

}
else
{
    // --- ÁREA PARA QUANDO O USUÁRIO ESTIVER DESLOGADO (PÁGINA DE APRESENTAÇÃO) ---
    <div class="hero-section text-center">
        <h1 class="hero-title">Gerencie suas Unidades de Saúde com Eficiência</h1>
        <p class="hero-subtitle">A plataforma completa para cadastro, monitoramento e gestão de dados.</p>
        <div class="hero-actions">
            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Começar Agora</a>
            <a class="btn btn-outline-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">Já tenho uma conta</a>
        </div>
    </div>
}