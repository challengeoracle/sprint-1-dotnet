@{
    ViewData["Title"] = "Dashboard da Unidade";
}

<div class="dashboard-header">
    <h1>@ViewData["NomeUnidade"]</h1>
    <p class="text-muted">Bem-vindo(a) ao seu painel de gestão.</p>
</div>

<div class="row g-4">
    <div class="col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-number">@ViewData["TotalPacientes"]</div>
            <div class="stat-card-label">Pacientes Registados</div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="stat-card">
            <div class="stat-card-number">@ViewData["TotalColaboradores"]</div>
            <div class="stat-card-label">Colaboradores Registados</div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h2>Ações Rápidas</h2>
    </div>
    <div class="card-body quick-actions">
        <a asp-area="UnidadeSaude" asp-controller="Pacientes" asp-action="Create" class="btn btn-primary btn-lg">Novo Paciente</a>
        <a asp-area="UnidadeSaude" asp-controller="Colaboradores" asp-action="Create" class="btn btn-primary btn-lg">Novo Colaborador</a>
        <a asp-area="UnidadeSaude" asp-controller="Pacientes" asp-action="Index" class="btn btn-secondary btn-lg">Ver Pacientes</a>
        <a asp-area="UnidadeSaude" asp-controller="Colaboradores" asp-action="Index" class="btn btn-secondary btn-lg">Ver Colaboradores</a>
    </div>
</div>