@using Medix.Models
@{
    ViewData["Title"] = "Dashboard da Unidade";

    var pacientesRecentes = ViewData["PacientesRecentes"] as List<Paciente> ?? new List<Paciente>();
    var colaboradoresRecentes = ViewData["ColaboradoresRecentes"] as List<Colaborador> ?? new List<Colaborador>();
}

<div class="dashboard-header">
    <h1>Bem-vindo(a) a @ViewData["NomeUnidade"]</h1>
    <p class="text-muted">Painel de controle e acesso rápido à gestão da sua unidade.</p>
</div>

    <div class="row g-4 mb-5">

        <div class="col-lg-3 col-md-6">
            <div class="stat-card stat-card-total h-100">
                <div class="stat-card-label">Total de Pacientes</div>
                <div class="stat-card-number">@ViewData["TotalPacientes"]</div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card stat-card-colaboradores h-100">
                <div class="stat-card-label">Colaboradores</div>
                <div class="stat-card-number">@ViewData["TotalColaboradores"]</div>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="stat-card stat-card-quick-action p-4 d-flex align-items-center justify-content-between h-100">
                <div>
                    <h3 class="mb-1" style="font-size: 1.2rem;">Iniciar um novo registro</h3>
                    <p class="text-muted mb-0">Cadastre um paciente ou colaborador rapidamente.</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-area="UnidadeSaude" asp-controller="Pacientes" asp-action="Create" class="btn btn-primary">Novo Paciente</a>
                    <a asp-area="UnidadeSaude" asp-controller="Colaboradores" asp-action="Create" class="btn btn-secondary">Novo Colaborador</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-6">
            <div class="card mb-0 h-100">
                <div class="card-header">
                    <h2>Últimos Pacientes Registrados (@pacientesRecentes.Count)</h2>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Data Nasc.</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var paciente in pacientesRecentes)
                                {
                                    <tr>
                                        <td>@paciente.NomeCompleto</td>
                                        <td>@paciente.DataNascimento?.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">
                                            <a asp-area="UnidadeSaude" asp-controller="Pacientes" asp-action="Details" asp-route-id="@paciente.Id" class="action-link">Detalhes</a>
                                        </td>
                                    </tr>
                                }
                                @if (!pacientesRecentes.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-muted p-4">Nenhum paciente registrado recentemente.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-area="UnidadeSaude" asp-controller="Pacientes" asp-action="Index" class="action-link">Ver todos os Pacientes</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-0 h-100">
                <div class="card-header">
                    <h2>Colaboradores Ativos (@colaboradoresRecentes.Count)</h2>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Cargo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var colaborador in colaboradoresRecentes)
                                {
                                    <tr>
                                        <td>@colaborador.NomeCompleto</td>
                                        <td>@Html.DisplayFor(m => colaborador.Cargo)</td>
                                        <td class="text-end">
                                            <a asp-area="UnidadeSaude" asp-controller="Colaboradores" asp-action="Details" asp-route-id="@colaborador.Id" class="action-link">Detalhes</a>
                                        </td>
                                    </tr>
                                }
                                @if (!colaboradoresRecentes.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-muted p-4">Nenhum colaborador registrado.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-area="UnidadeSaude" asp-controller="Colaboradores" asp-action="Index" class="action-link">Ver todos os Colaboradores</a>
                </div>
            </div>
        </div>
    </div>

</div> ```