@model Medix.Models.Paciente

@{
    ViewData["Title"] = "Excluir: " + Model.NomeCompleto;
    ViewData["HideFooter"] = true; // Esconde o rodapé principal
}

<div class="card">

    <div class="card-header">
        <h1>Confirmar Exclusão</h1>
    </div>

    <div class="card-body">
        <h4 class="text-danger">Tem a certeza que deseja excluir este paciente?</h4>
        <p class="text-muted">Esta ação não pode ser desfeita.</p>
        <hr />

        <dl class="details-list">
            <dt>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NomeCompleto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CPF)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd>
                @Model.DataNascimento?.ToString("dd/MM/yyyy")
            </dd>
        </dl>
    </div>

    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}