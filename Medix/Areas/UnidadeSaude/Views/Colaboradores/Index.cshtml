@model IEnumerable<Medix.Models.Colaborador>

@{
    ViewData["Title"] = "Gerir Colaboradores";
}

<div class="card">

    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            Adicionar Novo Colaborador
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeCompleto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cargo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Especialidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistroProfissional)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeCompleto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cargo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Especialidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistroProfissional)
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-link">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-link text-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>