@page
@model RegisterModel
@{
    ViewData["Title"] = "Crie sua conta";
    Layout = "_Layout"; // Certifique-se de que está usando um layout limpo se necessário
}

<div class="auth-container">

    <div class="auth-header">
        <img src="~/images/medix-logo.svg" alt="Medix Logo" class="auth-logo" />
        <h1 class="auth-title">@ViewData["Title"]</h1>
        <p class="auth-subtitle">Preencha os dados abaixo para começar.</p>
    </div>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.NomeCompleto">Nome Completo</label>
            <input asp-for="Input.NomeCompleto" class="form-control" placeholder="Digite seu nome completo" />
            <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.CPF">CPF</label>
            <input asp-for="Input.CPF" class="form-control" placeholder="000.000.000-00" />
            <span asp-validation-for="Input.CPF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Email">E-mail</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="seuemail@exemplo.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.DataNascimento">Data de Nascimento</label>
            <input asp-for="Input.DataNascimento" class="form-control" placeholder="DD/MM/AAAA" />
            <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Telefone">Telefone</label>
            <input asp-for="Input.Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" />
            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Senha</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Crie uma senha segura" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirme sua senha" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Confirmar Cadastro</button>

        <div class="auth-footer">
            <p>
                Já tem uma conta?
                <a class="auth-link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Entrar</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://unpkg.com/imask"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cpfInput = document.getElementById('Input_CPF');
            if(cpfInput) IMask(cpfInput, { mask: '000.000.000-00' });

            var dataInput = document.getElementById('Input_DataNascimento');
            if(dataInput) IMask(dataInput, { mask: '00/00/0000' });

            var telInput = document.getElementById('Input_Telefone');
            if(telInput) IMask(telInput, { mask: '(00) 00000-0000' });
        });
    </script>
}